{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "jspm_packages",
    "bin",
    "npm_scripts",
    "build"
  ]
}